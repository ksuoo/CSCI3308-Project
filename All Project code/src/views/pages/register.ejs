<%- include ('../partials/header') %>
<%- include ('../partials/message') %>

<main>
  <br><br>
  <img src="/images/chefitup.jpg" class="mx-auto d-block">
    <div class="container">
      <div class="container">
        <div class="row justify-content-center align-items-center">
          <div class="form-group col-md-4" style="background-color: #f4f4f4; padding: 50px; border-radius: 10px;" >
              <form action="/register" method="POST">
                  <div class="mb-3">
                      <input class="form-control" type="text" autofocus autocomplete="off" id="name" name="name" placeholder="Username" required/>
                  </div>
                  <div class="mb-3">
                      <input class="form-control" type="password" id="password" name="password" placeholder="Password" required />
                  </div>
                  <div class="text-center mb-3">
                      <input type="submit" id="register" value="Register" class="btn btn-success px-5"/>
                  </div>
                  <p class="text-center"> Already have an account? <a href="/login">Login</a></p>
              </form>
          </div>
    </div>
  </main>

