<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<%- include ('../partials/message') %>

<main>
    <div class="container">
        
        <div class="filter-container">
            <h2>Recipe Filters</h2>
        
            <form action="/submit-filters" method="post">
                <div class="mb-3">
                    <input class="form-control" type="text" autofocus autocomplete="off" id="keyword" name="keyword" placeholder="Keyword" required/>
                </div>

                <div class="form-group">
                    <label>Allergies:</label><br>
                    <div class="form-check filter-checkbox">
                        <input class="form-check-input" type="checkbox" name="allergies[]" id="glutenFree">
                        <label class="form-check-label" for="glutenFree">Gluten-Free</label>
                    </div>
                    <div class="form-check filter-checkbox">
                        <input class="form-check-input" type="checkbox" name="allergies[]" id="dairyFree">
                        <label class="form-check-label" for="dairyFree">Dairy-Free</label>
                    </div>
                    <div class="form-check filter-checkbox">
                        <input class="form-check-input" type="checkbox" name="allergies[]" id="nutFree">
                        <label class="form-check-label" for="nutFree">Nut-Free</label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Diets:</label><br>
                    <div class="form-check filter-checkbox">
                        <input class="form-check-input" type="checkbox" name="diets[]" id="vegetarian">
                        <label class="form-check-label" for="vegetarian">Vegetarian</label>
                    </div>
                    <div class="form-check filter-checkbox">
                        <input class="form-check-input" type="checkbox" name="diets[]" id="vegan">
                        <label class="form-check-label" for="vegan">Vegan</label>
                    </div>
                </div>

                <div class="form-group">
                    <label>Nutrients:</label><br>
                    <div class="form-check filter-checkbox">
                        <input class="form-check-input" type="checkbox" name="nutrients[]" id="protein">
                        <label class="form-check-label" for="protein">Protein</label>
                    </div>
                    <div class="form-check filter-checkbox">
                        <input class="form-check-input" type="checkbox" name="nutrients[]" id="fiber">
                        <label class="form-check-label" for="fiber">Fiber</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Search Recipes</button>

            </form>
        </div>
    </div>
</main>

<%- include ('../partials/footer') %>